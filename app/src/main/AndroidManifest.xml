<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.litmoments">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Application.Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LitStyle">
        <activity
            android:name=".Main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login.LoginActivity"
            android:theme="@style/MyLoginTheme" />
        <activity android:name=".AddJournal.AddJournalEntry" />
        <activity
            android:name=".Settings.SettingsActivity"
            android:parentActivityName=".Main.MainActivity"
            android:theme="@style/SettingsStyle" />
        <activity android:name=".DispJournal.DisplayJournal" />
        <activity android:name=".DispJournal.ImageSliderActivity" />
        <activity
            android:name=".Login.SplashActivity"
            android:theme="@style/MySplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".EditJournal.EditJournalEntry" />
        <activity android:name=".AddJournal.AddJournalImageSlider" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".AboutusActivity"></activity>
    </application>

</manifest>