<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:layout="@layout/settings_toolbar"></PreferenceCategory>

    <com.example.android.litmoments.Settings.MyPreferenceCategory
        android:title="Customization">

    <ListPreference
        android:defaultValue="2"
        android:dialogTitle="@string/uiTheme"
        android:entries="@array/pref_upload_theme_entries"
        android:entryValues="@array/pref_upload_theme_values"
        android:key="@string/key_uiTheme"
        android:summary="%s"
        android:title="@string/title_uiTheme" />


    <ListPreference
        android:defaultValue="0"
        android:dialogTitle="@string/uiThemeFont"
        android:entries="@array/pref_upload_font_entries"
        android:entryValues="@array/pref_upload_font_values"
        android:key="@string/key_uiThemeFont"
        android:summary="%s"
        android:title="@string/title_uiThemeFont" />

    </com.example.android.litmoments.Settings.MyPreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/divider_preference"
        />

<com.example.android.litmoments.Settings.MyPreferenceCategory
    android:title="Help &amp; support">


    <Preference
        android:selectable="true"
        android:title="About"
        android:key="@string/key_about" />

    <Preference
        android:title="@string/title_version"
        android:summary="@string/app_version"
        />

    <Preference
        android:title="@string/feedback"
        android:key="@string/key_feedback"
        android:selectable="true"/>

    <Preference
        android:title="@string/tellafriend"
        android:key="@string/key_tellafriend"
        android:selectable="true"/>

    <Preference
        android:title="@string/rateus"
        android:key="@string/key_rateus"
        android:selectable="true"/>


</com.example.android.litmoments.Settings.MyPreferenceCategory >
    <PreferenceCategory
        android:layout="@layout/divider_preference"
        />
 <com.example.android.litmoments.Settings.MyPreferenceCategory
     android:title="Account">

     <Preference
         android:title="@string/privacy"
         android:key="@string/key_privacy"
         android:selectable="true"/>

     <Preference
         android:title="@string/termsofuse"
         android:key="@string/key_termsofuse"
         android:selectable="true"/>

     <Preference
         android:title="@string/acc_logout"
         android:selectable="true"
         android:key="@string/key_userAccount"
         >

     </Preference>

 </com.example.android.litmoments.Settings.MyPreferenceCategory>
</PreferenceScreen>